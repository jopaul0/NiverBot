{
  "name": "ontrigger",
  "version": "0.1.3",
  "author": {
    "name": "OnVale Contabilidade",
    "email": "onvale.contabilidade@gmail.com",
    "url": "https://www.onvale.com.br"
  },
  "contributors": [
    {
      "name": "Jo√£o Santos",
      "email": "jopaulo.as8@gmail.com"
    },
    {
      "name": "Paulo Reis",
      "email": ""
    }
  ],
  "type": "module",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "start": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:electron": "electron-builder"
  },
  "dependencies": {
    "chance": "^1.1.13",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.19.1",
    "googleapis": "^150.0.1",
    "lucide-react": "^0.518.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.1.0",
    "react-date-range": "^2.0.1",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-vertical-timeline-component": "^3.5.3",
    "whatsapp-web.js": "^1.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.ontrigger.app",
    "productName": "OnTrigger",
    "compression": "maximum",
    "files": [
      "dist",
      "electron",
      "assets"
    ],
    "extraResources": [
      {
        "from": "node_modules/puppeteer/.local-chromium",
        "to": "local-chromium"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "assets"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}